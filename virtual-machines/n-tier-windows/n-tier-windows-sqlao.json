{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The admin password."
            }
        },
        "storageAccount": {
            "type": "string",
            "metadata": {
                "description": "The witness storage account"
            }
        },
        "storageAccountKey": {
            "type": "securestring",
            "metadata": {
                "description": "The witness storage account key"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-07-01",
            "name": "sql-vm1/sqlserverprepare",
            "location": "[resourceGroup().location]",
            "properties":{
                "autoUpgradeMinorVersion": true,
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.77",
                "settings": {
                    "configuration": {
                        "url": "https://github.com/mspnp/reference-architectures/raw/master/virtual-machines/n-tier-windows/dsc/PrepareSQLServer.zip",
                        "script": "PrepareSqlServer.ps1",
                        "function": "SqlServerPrepareDsc"
                    }
                },
                "protectedSettings": {
                    "configurationArguments": {
                        "DomainName": "contoso.com",
                        "DomainNetbiosName": "CONTOSO",
                        "Admincreds": {
                            "userName": "adminUser",
                            "password": "[parameters('adminPassword')]"
                        },
                        "sqlServiceCreds": {
                            "userName": "sqlservicetestuser",
                            "password": "[parameters('adminPassword')]"
                        },
                        "ClusterName": "AOCluster",
                        "ClusterOwnerNode": "sql1",
                        "ClusterIP": "10.0.3.30",
                        "witnessStorageAccount": "[parameters('storageAccount')]",
                        "witnessStorageAccountKey": "[parameters('storageAccountKey')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-07-01",
            "name": "sql-vm2/sqlserverprepare",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines/extensions', 'sql-vm1', 'sqlserverprepare')]"
            ],
            "properties":{
                "autoUpgradeMinorVersion": true,
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.77",
                "settings": {
                    "configuration": {
                        "url": "https://github.com/mspnp/reference-architectures/raw/master/virtual-machines/n-tier-windows/dsc/PrepareSQLServer.zip",
                        "script": "PrepareSqlServer.ps1",
                        "function": "SqlServerPrepareDsc"
                    }
                },
                "protectedSettings": {
                    "configurationArguments": {
                        "DomainName": "contoso.com",
                        "DomainNetbiosName": "CONTOSO",
                        "Admincreds": {
                            "userName": "adminUser",
                            "password": "[parameters('adminPassword')]"
                        },
                        "sqlServiceCreds": {
                            "userName": "sqlservicetestuser",
                            "password": "[parameters('adminPassword')]"
                        },
                        "ClusterName": "AOCluster",
                        "ClusterOwnerNode": "sql1",
                        "ClusterIP": "10.0.3.30",
                        "witnessStorageAccount": "[parameters('storageAccount')]",
                        "witnessStorageAccountKey": "[parameters('storageAccountKey')]"
                    }
                }
            }
        }
    ]
}


